{
  "name": "minecraft-crafting-recipe",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "process:language-data": "tsx ./scripts/process-language.ts",
    "process:recipe-data": "tsx ./scripts/process-recipe.ts",
    "process": "pnpm run process:recipe-data && pnpm run process:language-data",
    "dev": "vite",
    "build": "pnpm process && vue-tsc -b && vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "fuse.js": "^7.1.0",
    "inko": "^1.1.1",
    "pinia": "^3.0.3",
    "vue": "^3.5.22"
  },
  "devDependencies": {
    "@types/node": "^24.6.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.8.1",
    "sass": "^1.93.2",
    "tsx": "^4.20.6",
    "typescript": "~5.9.3",
    "vite": "npm:rolldown-vite@7.1.14",
    "vue-tsc": "^3.1.0",
    "zod": "^4.1.11"
  },
  "pnpm": {
    "overrides": {
      "vite": "npm:rolldown-vite@7.1.14"
    },
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "esbuild"
    ]
  }
}
